<Window x:Class="MatchGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatchGame"
        mc:Ignorable="d"
        Title="Find all of the maching moons" Height="450" Width="400">
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MouseDown = "TextBlock_MouseDown"/>
            <ColumnDefinition MouseDown = "TextBlock_MouseDown"/>
            <ColumnDefinition MouseDown = "TextBlock_MouseDown"/>
            <ColumnDefinition MouseDown = "TextBlock_MouseDown"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MouseDown = "TextBlock_MouseDown"/>
            <RowDefinition MouseDown = "TextBlock_MouseDown"/>
            <RowDefinition MouseDown = "TextBlock_MouseDown"/>
            <RowDefinition MouseDown = "TextBlock_MouseDown"/>
            <RowDefinition MouseDown = "TextBlock_MouseDown"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.ColumnSpan="1" HorizontalAlignment="Center" Grid.Row="0" TextWrapping="Wrap" Text="?" VerticalAlignment="Center" FontSize="36" MouseDown = "TextBlock_MouseDown"/>
        <TextBlock Grid.Column="1" Grid.ColumnSpan="1" HorizontalAlignment="Center" Grid.Row="0" TextWrapping="Wrap" Text="?" VerticalAlignment="Center" FontSize="36" MouseDown = "TextBlock_MouseDown"/>
        <TextBlock Grid.Column="2" Grid.ColumnSpan="1" HorizontalAlignment="Center" Grid.Row="0" TextWrapping="Wrap" Text="?" VerticalAlignment="Center" FontSize="36" MouseDown = "TextBlock_MouseDown"/>
        <TextBlock Grid.Column="3" Grid.ColumnSpan="1" HorizontalAlignment="Center" Grid.Row="0" TextWrapping="Wrap" Text="?" VerticalAlignment="Center" FontSize="36" MouseDown = "TextBlock_MouseDown"/>
        <TextBlock Grid.Column="0" Grid.ColumnSpan="1" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="?" VerticalAlignment="Center" FontSize="36" MouseDown = "TextBlock_MouseDown"/>
        <TextBlock Grid.Column="1" Grid.ColumnSpan="1" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="?" VerticalAlignment="Center" FontSize="36" MouseDown = "TextBlock_MouseDown"/>
        <TextBlock Grid.Column="2" Grid.ColumnSpan="1" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="?" VerticalAlignment="Center" FontSize="36" MouseDown = "TextBlock_MouseDown"/>
        <TextBlock Grid.Column="3" Grid.ColumnSpan="1" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="?" VerticalAlignment="Center" FontSize="36" MouseDown = "TextBlock_MouseDown"/>
        <TextBlock Grid.Column="0" Grid.ColumnSpan="1" HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" Text="?" VerticalAlignment="Center" FontSize="36" MouseDown = "TextBlock_MouseDown"/>
        <TextBlock Grid.Column="1" Grid.ColumnSpan="1" HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" Text="?" VerticalAlignment="Center" FontSize="36" MouseDown = "TextBlock_MouseDown"/>
        <TextBlock Grid.Column="2" Grid.ColumnSpan="1" HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" Text="?" VerticalAlignment="Center" FontSize="36" MouseDown = "TextBlock_MouseDown"/>
        <TextBlock Grid.Column="3" Grid.ColumnSpan="1" HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" Text="?" VerticalAlignment="Center" FontSize="36" MouseDown = "TextBlock_MouseDown"/>
        <TextBlock Grid.Column="0" Grid.ColumnSpan="1" HorizontalAlignment="Center" Grid.Row="3" TextWrapping="Wrap" Text="?" VerticalAlignment="Center" FontSize="36" MouseDown = "TextBlock_MouseDown"/>
        <TextBlock Grid.Column="1" Grid.ColumnSpan="1" HorizontalAlignment="Center" Grid.Row="3" TextWrapping="Wrap" Text="?" VerticalAlignment="Center" FontSize="36" MouseDown = "TextBlock_MouseDown"/>
        <TextBlock Grid.Column="2" Grid.ColumnSpan="1" HorizontalAlignment="Center" Grid.Row="3" TextWrapping="Wrap" Text="?" VerticalAlignment="Center" FontSize="36" MouseDown = "TextBlock_MouseDown"/>
        <TextBlock Grid.Column="3" Grid.ColumnSpan="1" HorizontalAlignment="Center" Grid.Row="3" TextWrapping="Wrap" Text="?" VerticalAlignment="Center" FontSize="36" MouseDown = "TextBlock_MouseDown"/>
        <TextBlock x:Name="TimeTextBlock" Grid.Column="0" HorizontalAlignment="Center" Grid.Row="4" TextWrapping="Wrap" Text="Start Game" VerticalAlignment="Center" Grid.ColumnSpan="4" FontSize="36" MouseDown="TimeTextBlock_MouseDown" Width="300" TextAlignment="Center"/>
        <TextBlock x:Name="Life" HorizontalAlignment="Center" Grid.Row="4" TextWrapping="Wrap" Text="Life: 3" VerticalAlignment="Top"/>
        <Rectangle HorizontalAlignment="Center" Height="67" Stroke="Black" VerticalAlignment="Center" Width="80"/>
        <Rectangle HorizontalAlignment="Center" Height="67" Stroke="Black" VerticalAlignment="Center" Width="80" Grid.Column="1"/>
        <Rectangle HorizontalAlignment="Center" Height="67" Stroke="Black" VerticalAlignment="Center" Width="80" Grid.Column="2"/>
        <Rectangle HorizontalAlignment="Center" Height="67" Stroke="Black" VerticalAlignment="Center" Width="80" Grid.Column="3"/>
        <Rectangle HorizontalAlignment="Center" Height="67" Stroke="Black" VerticalAlignment="Center" Width="80" Grid.Row="1"/>
        <Rectangle HorizontalAlignment="Center" Height="67" Stroke="Black" VerticalAlignment="Center" Width="80" Grid.Row="1" Grid.Column="1"/>
        <Rectangle HorizontalAlignment="Center" Height="67" Stroke="Black" VerticalAlignment="Center" Width="80" Grid.Row="1" Grid.Column="2"/>
        <Rectangle HorizontalAlignment="Center" Height="67" Stroke="Black" VerticalAlignment="Center" Width="80" Grid.Row="1" Grid.Column="3"/>
        <Rectangle HorizontalAlignment="Center" Height="67" Stroke="Black" VerticalAlignment="Center" Width="80" Grid.Row="2"/>
        <Rectangle HorizontalAlignment="Center" Height="67" Stroke="Black" VerticalAlignment="Center" Width="80" Grid.Row="2" Grid.Column="1"/>
        <Rectangle HorizontalAlignment="Center" Height="67" Stroke="Black" VerticalAlignment="Center" Width="80" Grid.Row="2" Grid.Column="2"/>
        <Rectangle HorizontalAlignment="Center" Height="67" Stroke="Black" VerticalAlignment="Center" Width="80" Grid.Row="2" Grid.Column="3"/>
        <Rectangle HorizontalAlignment="Center" Height="67" Stroke="Black" VerticalAlignment="Center" Width="80" Grid.Row="3"/>
        <Rectangle HorizontalAlignment="Center" Height="67" Stroke="Black" VerticalAlignment="Center" Width="80" Grid.Row="3" Grid.Column="1"/>
        <Rectangle HorizontalAlignment="Center" Height="67" Stroke="Black" VerticalAlignment="Center" Width="80" Grid.Row="3" Grid.Column="2"/>
        <Rectangle HorizontalAlignment="Center" Height="67" Stroke="Black" VerticalAlignment="Center" Width="80" Grid.Row="3" Grid.Column="3"/>
        
    </Grid>
</Window>